@model FiosEntreNos.ViewModel.ProductCreateViewModel

@{
    ViewBag.Title = "Cadastro de Produto";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <form>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Nome</label>
                    <input class="form-control rounded-2" asp-for="Name" required/>
                </div>
                <div class="form-group">
                    <label>Descrição</label>
                    <input class="form-control" asp-for="Description" required/>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Altura</label>
                            <input type="number" class="form-control" asp-for="Heigth"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Largura</label>
                            <input type="number" class="form-control" asp-for="Width"/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input type="number" class="form-control" asp-for="Price"/>
                </div>
                <button class="btn btn-success d-block" type="submit">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>
