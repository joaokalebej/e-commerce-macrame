@model FiosEntreNos.ViewModel.ProductCreateViewModel

@{
    ViewBag.Title = "Cadastro de Produto";
    Layout = "_Layout";
}

<div class="container py-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Cadastro de Produto</h2>
      <form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

        <div class="row g-3">
          <div class="col-12">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control rounded-2" />
            <span asp-validation-for="Name" class="text-danger small"></span>
          </div>

          <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control rounded-2" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
          </div>

          <div class="col-6">
            <label asp-for="Heigth" class="form-label">Altura (cm)</label>
            <input asp-for="Heigth" type="number" class="form-control" step="0.1" min="0" />
            <span asp-validation-for="Heigth" class="text-danger small"></span>
          </div>

          <div class="col-6">
            <label asp-for="Width" class="form-label">Largura (cm)</label>
            <input asp-for="Width" type="number" class="form-control" step="0.1" min="0" />
            <span asp-validation-for="Width" class="text-danger small"></span>
          </div>

          <div class="col-12 col-md-6">
            <label asp-for="Price" class="form-label">Preço (R$)</label>
            <input asp-for="Price" type="number" class="form-control" step="0.01" min="0" />
            <span asp-validation-for="Price" class="text-danger small"></span>
          </div>
          
          <div class="mb-3">
            <label for="ImageUpload" class="form-label">Imagem do Produto</label>
            <input class="form-control" type="file" id="ImageUpload" name="files" accept="image/*" onchange="previewMultipleImages(this)" multiple/>
            <div id="ImagePreviewContainer" class="mt-3 d-flex flex-wrap"></div>
            <div class="mt-3">
              <img id="ImagePreview" src="#" alt="Pré-visualização" class="img-thumbnail d-none" style="max-width: 250px;" />
            </div>
          </div>
        </div>

        <div class="text-center mt-4">
          <button type="submit" class="btn btn-success px-5">Salvar</button>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
  <script src="~/js/product.js" asp-append-version="true"></script>
}

